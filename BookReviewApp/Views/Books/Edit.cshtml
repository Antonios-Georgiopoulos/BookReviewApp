@model BookReviewApp.Models.ViewModels.BookViewModel

@{
    ViewData["Title"] = "Edit Book";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="fas fa-edit"></i> Edit Book
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input asp-for="Id" type="hidden" />
                    <input asp-for="DateCreated" type="hidden" />
                    <input asp-for="AverageRating" type="hidden" />
                    <input asp-for="ReviewCount" type="hidden" />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Title *</label>
                        <input asp-for="Title" class="form-control" placeholder="Enter the book title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Author" class="form-label">Author *</label>
                        <input asp-for="Author" class="form-control" placeholder="Enter the author's name">
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="PublishedYear" class="form-label">Publication Year *</label>
                                <input asp-for="PublishedYear" type="number" class="form-control"
                                       min="1000" max="2100" placeholder="e.g. 2023">
                                <span asp-validation-for="PublishedYear" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Genre" class="form-label">Genre *</label>
                                <select asp-for="Genre" class="form-select">
                                    <option value="">Select genre</option>
                                    <option value="Fiction">Fiction</option>
                                    <option value="Fantasy">Fantasy</option>
                                    <option value="Science Fiction">Science Fiction</option>
                                    <option value="Mystery">Mystery</option>
                                    <option value="Thriller">Thriller</option>
                                    <option value="Romance">Romance</option>
                                    <option value="Biography">Biography</option>
                                    <option value="History">History</option>
                                    <option value="Philosophy">Philosophy</option>
                                    <option value="Psychology">Psychology</option>
                                    <option value="Business">Business</option>
                                    <option value="Self-help">Self-help</option>
                                    <option value="Technology">Technology</option>
                                    <option value="Science">Science</option>
                                    <option value="Art">Art</option>
                                    <option value="Travel">Travel</option>
                                    <option value="Cooking">Cooking</option>
                                    <option value="Health">Health</option>
                                    <option value="Children">Children</option>
                                    <option value="Educational">Educational</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="Genre" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Book Information -->
                    <div class="alert alert-light">
                        <h6><i class="fas fa-info-circle"></i> Book Information</h6>
                        <div class="row">
                            <div class="col-md-4">
                                <small class="text-muted">Date Added:</small><br>
                                <strong>@Model.DateCreated.ToString("MM/dd/yyyy HH:mm")</strong>
                            </div>
                            <div class="col-md-4">
                                <small class="text-muted">Review Count:</small><br>
                                <strong>@Model.ReviewCount</strong>
                            </div>
                            <div class="col-md-4">
                                <small class="text-muted">Average Rating:</small><br>
                                <strong>
                                    @if (Model.AverageRating > 0)
                                    {
                                        <span>@Model.AverageRating.ToString("F1") <i class="fas fa-star text-warning"></i></span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No ratings</span>
                                    }
                                </strong>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Warning:</strong> Editing this book will affect all related reviews.
                    </div>

                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save"></i> Update Book
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            var originalGenre = $('#Genre').val();
            var predefinedGenres = ['Fiction', 'Fantasy', 'Science Fiction', 'Mystery',
                                   'Thriller', 'Romance', 'Biography', 'History', 'Philosophy', 'Psychology',
                                   'Business', 'Self-help', 'Technology', 'Science', 'Art',
                                   'Travel', 'Cooking', 'Health', 'Children', 'Educational'];

            if (originalGenre && !predefinedGenres.includes(originalGenre)) {
                $('#Genre').val('Other');
                var customInput = '<div id="custom-genre-input" class="mt-2">' +
                    '<input type="text" id="CustomGenre" class="form-control" placeholder="Enter the genre" value="' + originalGenre + '">' +
                    '</div>';
                $('#Genre').parent().append(customInput);

                $('#CustomGenre').on('input', function() {
                    $('#Genre').val($(this).val());
                });

                $('#Genre').val(originalGenre);
            }

            $('#Genre').change(function() {
                if ($(this).val() === 'Other') {
                    if ($('#custom-genre-input').length === 0) {
                        var customInput = '<div id="custom-genre-input" class="mt-2">' +
                            '<input type="text" id="CustomGenre" class="form-control" placeholder="Enter the genre">' +
                            '</div>';
                        $(this).parent().append(customInput);

                        $('#CustomGenre').on('input', function() {
                            $('#Genre').val($(this).val());
                        });
                    }
                } else {
                    $('#custom-genre-input').remove();
                }
            });
        });
    </script>
}