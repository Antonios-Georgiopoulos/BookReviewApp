@model BookReviewApp.Models.ViewModels.BookViewModel

<div class="card h-100">
    <div class="card-body">
        <h5 class="card-title">
            <a asp-controller="Books" asp-action="Details" asp-route-id="@Model.Id" class="text-decoration-none">
                @Model.Title
            </a>
        </h5>
        <h6 class="card-subtitle mb-2 text-muted">@Model.Author</h6>

        <div class="mb-2">
            <span class="badge bg-secondary">@Model.Genre</span>
            <span class="badge bg-info">@Model.PublishedYear</span>
        </div>

        <div class="mb-2">
            @if (Model.AverageRating > 0)
            {
                <div class="d-flex align-items-center">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <i class="fas fa-star @(i <= Model.AverageRating ? "text-warning" : "text-muted")"></i>
                    }
                    <span class="ms-2 small text-muted">
                        (@Model.AverageRating.ToString("F1")) - @Model.ReviewCount reviews
                    </span>
                </div>
            }
            else
            {
                <div class="d-flex align-items-center">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <i class="fas fa-star text-muted"></i>
                    }
                    <span class="ms-2 small text-muted">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span>Be the first to rate!</span>
                        }
                        else
                        {
                            <span>No ratings yet</span>
                        }
                    </span>
                </div>
            }
        </div>

        <small class="text-muted">
            Added: @Model.DateCreated.ToString("MM/dd/yyyy")
        </small>
    </div>

    <div class="card-footer bg-transparent">
        <div class="d-flex gap-2">
            <a asp-controller="Books" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary btn-sm flex-fill">
                <i class="fas fa-eye"></i> View
            </a>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Books" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-edit"></i>
                </a>
            }
            else
            {
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary btn-sm" title="Login to edit">
                    <i class="fas fa-sign-in-alt"></i>
                </a>
            }
        </div>
    </div>
</div>